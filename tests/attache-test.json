{
    "repository": "git@vcs.test:vendor/application.git",
    "servers": [
        {
            "name": "production",
            "host": "production.test",
            "port": 22,
            "user": "user",
            "root": "/path/to/application",
            "paths": {
                "releases": "releases",
                "serve": "live",
                "storage": "storage",
                "env": ".env"
            },
            "php": {
                "bin": "php"
            },
            "composer": {
                "bin": "composer.phar",
                "local": true
            },
            "branch": "master"
        },
        {
            "name": "staging",
            "host": "staging.test",
            "port": 22,
            "user": "user",
            "root": "/path/to/application",
            "branch": "staging"
        }
    ]
}
