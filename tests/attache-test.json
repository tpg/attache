{
    "repository": "git@vcs.test:vendor/application.git",
    "common": {
        "branch": "common-branch",
        "host": "common-host.test",
        "port": 22,
        "user": "common-user",
        "paths": {
            "releases": "common-releases",
            "serve": "common-serve",
            "storage": "common-storage",
            "env": "common-env"
        },
        "php": {
            "bin": "common-php"
        },
        "composer": {
            "bin": "common-composer",
            "local": true
        }
    },
    "servers": [
        {
            "name": "production",
            "root": "/path/to/application",
	    "migrate": true,
            "scripts": {
                "before-migrate": [
                    "sudo mysqldump --databases db_name /backup/dump.sql"
                ],
                "before-build": [
                    "php ./artisan ziggy:generate /resources/js/routes.js --url=https://url.test"
                ]
            }
        },
        {
            "name": "staging",
            "host": "staging.test",
            "port": 22,
            "user": "user",
            "root": "/path/to/application",
            "branch": "staging"
        }
    ]
}
