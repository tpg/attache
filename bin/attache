#!/usr/bin/env php
<?php

/**
 * Attaché - A highly opinionated deployment tool for Laravel.
 *
 * https://tpg.github.io/attache/
 *
 * @package Attache
 * @author  Warrick Bayman <makers@thepublicgood.dev>
 */


/*
 * Require the Composer autoloader.
 */

use TPG\Attache\Application;

if (file_exists(__DIR__.'/../vendor/autoload.php')) {
    require __DIR__.'/../vendor/autoload.php';
} else {
    require __DIR__.'/../../../autoload.php';
}

/*
 * Boot the Attaché application which returns an instance of
 * Symfony\Component\Console\Application which we can then run.
 *
 */
$app = (new Application())->boot();

// Once we have a booted console application, we can run it.
// Standard Symfony stuff here...
$app->run();
