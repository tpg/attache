#!/usr/bin/env php
<?php

/**
 * Attaché - A highly opinionated deployment tool for Laravel.
 *
 * https://tpg.github.io/attache/
 *
 * @package Attache
 * @author  Warrick Bayman <me@warrickbayman.co.za>
 */

const ATTACHE_ROOT = __DIR__.'/../';

if (file_exists(__DIR__.'/../vendor/autoload.php')) {
    require __DIR__.'/../vendor/autoload.php';
} else {
    require __DIR__.'/../../../autoload.php';
}

$app = new \Symfony\Component\Console\Application('Attaché', '0.8.0-ALPHA [DO NOT USE IN PRODUCTION]');

$app->add(new \TPG\Attache\Commands\InitCommand());

$app->add(new \TPG\Attache\Commands\InstallCommand());

$app->add(new \TPG\Attache\Commands\ServerListCommand());
$app->add(new \TPG\Attache\Commands\ServerAddCommand());

$app->add(new \TPG\Attache\Commands\ReleaseListCommand());


$app->run();
